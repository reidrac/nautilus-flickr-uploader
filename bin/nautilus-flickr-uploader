use Locale::gettext;
use Getopt::Long;
use Env qw( XDG_CONFIG_HOME HOME );
use YAML;

use Upload;
use Account;

my $VERSION = '0.02';
my $APPNAME = 'nautilus-flickr-uploader';

sub Help
{
	print <<EOH
$APPNAME v$VERSION

Usage:

   $APPNAME [OPTIONS] <directory or list of files>

Options:

   -?,--help    This help screen
   --account    Show account dialog

This product uses the Flickr API but is not endorsed or certified by Flickr.

EOH

}

sub LoadConfiguration()
{
	if( -r $config_file )
	{
		$config = YAML::LoadFile( $config_file )
			or die( "Error: failed to load $config_file\n" );
	}
	else
	{
		warn "Warning: failed to load $config_file, using defaults";

		$config = YAML::Load(<<'EndOfConf');
# default configuration
username:
token:
privacy: public
resize: no
size: 1024
EndOfConf
	}
}

my ($help, $account, $config, $config_file, $api);

textdomain( 'nautilus-flickr-uploader' );

GetOptions ( 'help|?' => \$help, 'account' => \$account );

if ($help)
{
	Help( );
	exit 0;
}

# This API data is related to nautilus-flickr-uploader.
# Please, don't use it for other applications.
$main::api = {
	'key' => '8c53a5a7dbdf9b3c354a8ef339cfa2b9',
	'secret' => '0df5dcc53340ed26'
};

$main::config_file = ($XDG_CONFIG_HOME ? $XDG_CONFIG_HOME : $HOME .'/.config' )
	.'/nautilus-flickr-uploader.yml';

LoadConfiguration( );

if( $account )
{
	Account::Init( );
}
else
{
	Upload::Init( );
}

Gtk2->main;

# EOF

